# Enable Powerlevel10k instant prompt. Should stay close to the top of ~{{ .chezmoi.pathSeparator }}.zshrc.
# Initialization code that may require console input (password prompts, [y{{ .chezmoi.pathSeparator }}n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME{{ .chezmoi.pathListSeparator }}-$HOME{{ .chezmoi.pathSeparator }}.cache}{{ .chezmoi.pathSeparator }}p10k-instant-prompt-${(%){{ .chezmoi.pathListSeparator }}-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME{{ .chezmoi.pathListSeparator }}-$HOME{{ .chezmoi.pathSeparator }}.cache}{{ .chezmoi.pathSeparator }}p10k-instant-prompt-${(%){{ .chezmoi.pathListSeparator }}-%n}.zsh"
fi

fpath=(~{{ .chezmoi.pathSeparator }}.config{{ .chezmoi.pathSeparator }}zsh-completions $fpath)
source ~{{ .chezmoi.pathSeparator }}.config{{ .chezmoi.pathSeparator }}antigen.zsh
export PATH={{ .chezmoi.commandDir }}{{ .chezmoi.pathSeparator }}bin{{ .chezmoi.pathListSeparator }}{{ .chezmoi.commandDir }}{{ .chezmoi.pathSeparator }}scripts{{ .chezmoi.pathListSeparator }}$PATH
export LIBVIRT_DEFAULT_URI=qemu{{ .chezmoi.pathListSeparator }}{{ .chezmoi.pathSeparator }}{{ .chezmoi.pathSeparator }}{{ .chezmoi.pathSeparator }}system

# Load the oh-my-zsh's library.
antigen use oh-my-zsh

# Bundles from the default repo (robbyrussell's oh-my-zsh).
antigen bundle ansible
antigen bundle {{ .chezmoi.config.git.command }}
antigen bundle pip
antigen bundle kubectl
antigen bundle terraform

# Syntax highlighting bundle.
antigen bundle zsh-users{{ .chezmoi.pathSeparator }}zsh-syntax-highlighting
antigen bundle zsh-users{{ .chezmoi.pathSeparator }}zsh-autosuggestions
antigen bundle zsh-users{{ .chezmoi.pathSeparator }}zsh-completions
antigen bundle ael-code{{ .chezmoi.pathSeparator }}zsh-colored-man-pages

# Load the theme.
THEME=romkatv{{ .chezmoi.pathSeparator }}powerlevel10k
[[ `antigen list | grep $THEME | wc -l` -gt 0 ]] || antigen theme $THEME

# Tell Antigen that you're done.
antigen apply

# To customize prompt, run `p10k configure` or edit ~{{ .chezmoi.pathSeparator }}.p10k.zsh.
[[ ! -f ~{{ .chezmoi.pathSeparator }}.p10k.zsh ]] || source ~{{ .chezmoi.pathSeparator }}.p10k.zsh

export EDITOR="{{ .chezmoi.config.edit.command }}"

alias update="sudo apt update && sudo apt upgrade -y"
# alias gpush="{{ .chezmoi.config.git.command }} {{ .chezmoi.command }} -A && {{ .chezmoi.config.git.command }} commit -m $1 && {{ .chezmoi.config.git.command }} push".
function gpush(){ {{ .chezmoi.config.git.command }} {{ .chezmoi.command }} -A && {{ .chezmoi.config.git.command }} commit -m $1 && {{ .chezmoi.config.git.command }} push }
#alias dg="{{ .chezmoi.commandDir }}{{ .chezmoi.pathSeparator }}scripts{{ .chezmoi.pathSeparator }}remmina-datagroup.sh"
#alias ferd="{{ .chezmoi.commandDir }}{{ .chezmoi.pathSeparator }}scripts{{ .chezmoi.pathSeparator }}ferdium.sh"
alias headphones="pactl set-card-profile alsa_card.pci-0000_04_00.6 HiFi\ \(Headphones,\ Mic1,\ Mic2\)"
alias speakers="pactl set-card-profile alsa_card.pci-0000_04_00.6 HiFi\ \(Mic1,\ Mic2,\ Speaker\)"
alias sound="pactl set-card-profile alsa_card.pci-0000_04_00.6 HiFi\ \(Headphones,\ Mic1,\ Mic2\);pactl set-card-profile alsa_card.pci-0000_04_00.6 HiFi\ \(Mic1,\ Mic2,\ Speaker\)"
function windows(){ docker compose -f {{ .chezmoi.commandDir }}{{ .chezmoi.pathSeparator }}.config{{ .chezmoi.pathSeparator }}winapps{{ .chezmoi.pathSeparator }}compose.yaml $@ }
